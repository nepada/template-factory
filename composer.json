{
    "name": "nepada/template-factory",
    "type": "library",
    "license": "BSD-3-Clause",
    "description": "Latte powered template factory on steroids.",
    "keywords": ["nette", "latte", "template"],
    "support": {
        "email": "petr@pada.cz",
        "issues": "https://github.com/nepada/template-factory/issues"
    },
    "authors": [
        {
            "name": "Petr MorÃ¡vek",
            "email": "petr@pada.cz"
        }
    ],
    "require": {
        "php": ">=7.4.0 <8.2",
        "nette/utils": "^3.2.5@dev",
        "latte/latte": "^2.7.1@dev",
        "nette/application": "^3.1.4@dev"
    },
    "require-dev": {
        "nette/tester": "2.4.1",
        "mockery/mockery": "1.4.4",
        "phpstan/phpstan": "0.12.99",
        "phpstan/phpstan-strict-rules": "0.12.11",
        "pepakriz/phpstan-exception-rules": "0.11.7",
        "phpstan/phpstan-nette": "0.12.21",
        "nepada/phpstan-nette-tester": "0.3.2",
        "spaze/phpstan-disallowed-calls": "1.9.0",
        "phpstan/phpstan-mockery": "0.12.14",
        "php-parallel-lint/php-parallel-lint": "1.3.1",
        "nepada/coding-standard": "7.4.0",
        "nette/bootstrap": "^3.0@dev",
        "nette/di": "^3.0.9@dev",
        "nette/http": "^3.0.2@dev"
    },
    "suggest": {
        "nette/di": "for integration with Nette DI container"
    },
    "autoload": {
        "psr-4": {
            "Nepada\\Bridges\\": "src/Bridges/",
            "Nepada\\TemplateFactory\\": "src/TemplateFactory/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NepadaTests\\": "tests/"
        }
    },
    "config": {
        "platform-check": false
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.8-dev"
        }
    }
}
