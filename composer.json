{
    "name": "nepada/template-factory",
    "type": "library",
    "license": "BSD-3-Clause",
    "description": "Latte powered template factory on steroids.",
    "keywords": ["nette", "latte", "template"],
    "support": {
        "email": "petr@pada.cz",
        "issues": "https://github.com/nepada/template-factory/issues"
    },
    "authors": [
        {
            "name": "Petr MorÃ¡vek",
            "email": "petr@pada.cz"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "nette/utils": "^2.4.5@dev || ^3.0@dev",
        "latte/latte": "^2.4.1@dev",
        "nette/application": "^2.4@dev"
    },
    "require-dev": {
        "nette/tester": "^1.6",
        "jakub-onderka/php-parallel-lint": "^0.9",
        "nepada/coding-standard": "^2.0.0",
        "nette/bootstrap": "^2.4.1@dev || ^3.0@dev",
        "nette/di": "^2.4.7@dev || ^3.0@dev",

        "nette/component-model": "^2.3@dev || ^3.0@dev",
        "nette/reflection": "^2.4@dev || ^3.0@dev",
        "nette/neon": "^2.4@dev || ^3.0@dev",
        "nette/php-generator": "^2.4@dev || ^3.0@dev",
        "nette/caching": "^2.5@dev || ^3.0@dev",
        "nette/finder": "^2.4@dev || ^3.0@dev",
        "nette/http": "^2.4.0@dev || ^3.0@dev",
        "tracy/tracy": "^2.4.1@dev || ^3.0@dev"
    },
    "suggest": {
        "nette/di": "for integration with Nette DI container"
    },
    "autoload": {
        "psr-4": {
            "Nepada\\Bridges\\": "src/Bridges/",
            "Nepada\\TemplateFactory\\": "src/TemplateFactory/"
        },
        "classmap": [
            "src/TemplateFactory/exceptions.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.2-dev"
        }
    }
}
